<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <ImageView
        android:id="@+id/back"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/matrix_profile_mine_back_to_top_night"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/et_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/search_bg_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/back"
        app:layout_constraintRight_toLeftOf="@id/search"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/im_search_icon_gray_level3_night"
        android:text="搜索"
        android:textColor="#bbb"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/et_container"
        app:layout_constraintLeft_toLeftOf="@id/et_container"
        app:layout_constraintTop_toTopOf="@id/et_container" />


    <EditText
        android:id="@+id/et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:background="@drawable/search_et_bg_shape"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@id/et_container"
        app:layout_constraintLeft_toRightOf="@id/search_iv"
        app:layout_constraintRight_toRightOf="@id/et_container"
        app:layout_constraintTop_toTopOf="@id/et_container" />

    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:text="搜索"
        android:textColor="#bbb"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>